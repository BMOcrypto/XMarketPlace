@model User

<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Admin Panel</title>
    <meta name="robots" content="noindex, follow" />
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" type="image/x-icon" href="~/admin/assets/images/favicon.ico">
    <link rel="stylesheet" href="~/admin/assets/css/vendor/bootstrap.min.css">
    <link rel="stylesheet" href="~/admin/assets/css/vendor/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/admin/assets/css/vendor/font-awesome.min.css">
    <link rel="stylesheet" href="~/admin/assets/css/vendor/themify-icons.css">
    <link rel="stylesheet" href="~/admin/assets/css/vendor/cryptocurrency-icons.css">
    <link rel="stylesheet" href="~/admin/assets/css/plugins/plugins.css">
    <link rel="stylesheet" href="~/admin/assets/css/helper.css">
    <link rel="stylesheet" href="~/admin/assets/css/style.css">
    <link id="cus-style" rel="stylesheet" href="~/admin/assets/css/style-primary.css">
</head>
<body>
    <div class="main-wrapper">
        <div class="content-body m-0 p-0">
            <div class="login-register-wrap">
                <div class="row">
                    <div class="d-flex align-self-center justify-content-center order-2 order-lg-1 col-lg-5 col-12">
                        <div class="login-register-form-wrap">
                            <div class="content">
                                <h1>XMarketPlace</h1>
                                <p>Girişi yapmak için lütfen kaydolun.</p>
                            </div>
                            <div class="login-register-form">
                                @*<form asp-controller="Account" asp-action="Login" method="post">
                                    <div class="row">
                                        <div class="col-12 mb-20">
                                            <input type="text" asp-for="EmailAddress" class="form-control" placeholder="User ID / Email">
                                        </div>
                                        <div class="col-12 mb-20">
                                            <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                                        </div>
                                        <div class="col-12 mt-10">
                                            <a asp-controller="Account" asp-action="SignUp" class="button button-primary button-outline">Kayıt Ol</a>
                                            <button class="button button-primary button-outline">Giriş Yap</button>
                                            <a asp-controller="Home" asp-action="Index" class="button button-primary button-outline">Anasayfaya Dön</a>
                                        </div>
                                    </div>
                                </form>*@
                                <form asp-action="SignUp" method="post" class="billing-form" role="form" enctype="multipart/form-data">
                                    <h3 class="mb-4 billing-heading">Signing Up</h3>
                                    <div class="row align-items-end">
                                        <div class="col-md-6">
                                            <input asp-for="Title" type="hidden" value="standard">
                                            <div class="form-group">
                                                @*<label asp-for="FirstName"></label>*@
                                                <br /><br />
                                                <input asp-for="FirstName" class="form-control" placeholder="First Name">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                @*<label asp-for="LastName"></label>*@
                                                <br /><br />
                                                <input asp-for="LastName" class="form-control" placeholder="Last Name">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                @*<label asp-for="ImageUrl">Upload Image</label>*@
                                                <br /><br />
                                                <input class="form-control" type="file" name="files">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                @*<label asp-for="Address"></label>*@
                                                <br /><br />
                                                <input asp-for="Address" class="form-control" placeholder="Address">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                @*<label asp-for="PhoneNumber"></label>*@
                                                <br /><br />
                                                <input asp-for="PhoneNumber" class="form-control" placeholder="Phone">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                @*<label asp-for="EmailAddress"></label>*@
                                                <br /><br />
                                                <input asp-for="EmailAddress" class="form-control" placeholder="Email">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                @*<label asp-for="Password"></label>*@
                                                <br /><br />
                                                <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt-5 pt-3 d-flex">
                                        <div class="col-md-6">
                                            <div class="cart-detail p-3 p-md-4">
                                                <p><input type="submit" class="button button-primary button-outline py-3 px-4" value="Create Account"></p>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="cart-detail p-3 p-md-4">
                                                <a asp-controller="Home" asp-action="Index" class="button button-primary button-outline py-3 px-4">Go Back</a>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="login-register-bg order-1 order-lg-2 col-lg-7 col-12">
                        <div class="content">
                            <h1>Giriş Yap</h1>
                            <p>XMarketPlace yönetici sayfasına hoşgeldiniz.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="~/js/vendor/jquery-3.3.1.min.js"></script>
    <script src="~/js/vendor/popper.min.js"></script>
    <script src="~/js/vendor/bootstrap.min.js"></script>
    <script src="~/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="~/js/plugins/tippy4.min.js.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>
