@model List<Product>

<div>
    <h2>Trending Products</h2>
    <div>
        @foreach (var item in Model) // This method will be checked later...
        {
            <div>
                <img src="@item.ImagePath" alt="" />
                <div>
                    <h3><a asp-controller="Home" asp-action="Product" asp-route-id="@item.ID">@item.ProductName</a></h3>
                    <span>@item.ViewCount people viewed this</span>
                </div>
            </div>
        }
    </div>
</div>