@model Product
@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="hero-wrap hero-wrap-2" style="background-image: url('../../images/bg_2.jpg')" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end justify-content-center">
            <div class="col-md-9 ftco-animate mb-5 text-center">
                <p class="breadcrumbs mb-0"><span class="mr-2"><a asp-controller="Home" asp-action="Index">Home <i class="fa fa-chevron-right"></i></a></span> <span><a asp-controller="Home" asp-action="ShowAllProducts">Products <i class="fa fa-chevron-right"></i></a></span> <span>Products Single <i class="fa fa-chevron-right"></i></span></p>
                <h2 class="mb-0 bread">Single Product</h2>
            </div>
        </div>
    </div>
</section>



<section class="ftco-section">
    <div class="container">
        <h1>Here I Display my product</h1>
        <div class="row">
            <div class="col-lg-6 mb-5 ftco-animate">
                <!--Image path changes for each product.-->
                <a href="../../@Model.ImagePath" class="image-popup prod-img-bg"><img src="@Model.ImagePath" class="img-fluid" alt="No Image"></a>
                @*<img src="@Model.ImagePath" class="img-fluid" alt="No Image">*@
            </div>
            <div class="col-lg-6 product-details pl-md-5 ftco-animate">
                @*<h3>Bacardi 151 Degree</h3>*@
                <h3>@Model.ProductName</h3>
                @*<p class="price"><span>$120.00</span></p>*@
                <p class="price"><span>@Model.UnitPrice ₺</span></p>
                <p>@Model.ProductDetail</p>
                
                <div class="row mt-4">
                    
                    <div class="col-md-12">
                        <p style="color: #000;">@Model.UnitsInStock piece available & this product has been viewed @Model.ViewCount times</p>
                    </div>
                </div>
                
                <p class="text-right">
                    <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-id="@Model.ID" class="btn btn-primary py-3 px-5 mr-2">Add to Cart</a>
                    @*<a asp-controller="Product" asp-action="Delete" asp-route-id="@item.ID" class="btn">Delete</a>*@
                    <a asp-controller="Home" asp-action="ShowAllProducts" class="btn btn-primary py-3 px-5">All Products</a>
                </p>
            </div>
        </div>
    </div>
</section>